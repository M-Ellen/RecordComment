<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_sound_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/record_play_bg">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@mipmap/message_voice_bar"/>-->

    <ImageView
        android:id="@+id/iv_voice_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/record_play_animation"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/tv_audio_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textColor="@color/time_color"
        android:layout_toRightOf="@id/iv_voice_icon"
        android:textStyle="bold"
        android:textSize="13dp"/>

</RelativeLayout>